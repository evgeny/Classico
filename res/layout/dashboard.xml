<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/background_light">
  
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal">
        
        <Button style="@style/HomeButton"
            android:text="Composers"
            android:onClick="onComposersClick"
            android:drawableTop="@drawable/composer128"
        />
        <Button style="@style/HomeButton"
            android:text="Scores"
            android:onClick="onScoresClick"
            android:drawableTop="@drawable/scores128"
        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/darker_gray">
        
        <TextView 
            style="@android:style/TextAppearance.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_composers_count"
            android:text="composers count: x"
        />
        <TextView 
            style="@android:style/TextAppearance.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_scores_count"
            android:text="scores count: y"/>
    </LinearLayout>
</LinearLayout>
